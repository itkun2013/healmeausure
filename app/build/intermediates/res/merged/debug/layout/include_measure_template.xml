<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="304px"
              android:layout_height="match_parent"
              android:background="@drawable/rounded_rectangle"
              android:gravity="center"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="259px"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_measure_template1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/measure_template_tv_margin_top"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_measure_template2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_measure_template1"
            android:layout_marginTop="@dimen/measure_template_tv_margin_top"
            android:gravity="center"
            android:textSize="28dp"/>

        <TextView
            android:id="@+id/tv_measure_template3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_measure_template2"
            android:layout_marginTop="@dimen/measure_template_tv_margin_top"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_measure_template1"
                android:layout_width="258px"
                android:layout_height="60px"
                android:layout_marginBottom="24px"
                android:background="@drawable/btn_selector_blue"
                android:gravity="center"
                android:text="@string/start_measure"
                android:textColor="@color/menuText"
                android:textSize="24px"/>

            <Button
                android:id="@+id/btn_measure_template3"
                android:layout_width="258px"
                android:layout_height="60px"
                android:layout_marginBottom="24px"
                android:background="@drawable/btn_selector_blue"
                android:gravity="center"
                android:text="@string/trend_statistics"
                android:textColor="@color/menuText"
                android:textSize="24px"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_measure_template2"
                android:layout_width="258px"
                android:layout_height="60px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="24px"
                android:background="@drawable/btn_selector_blue"
                android:gravity="center"
                android:text="@string/trend_statistics"
                android:textColor="@color/menuText"
                android:textSize="24px"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>