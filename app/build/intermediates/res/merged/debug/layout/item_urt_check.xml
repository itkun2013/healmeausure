<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/num_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingEnd="15dp"
        android:text="1"
        />

    <TextView
        android:id="@+id/code_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:text="@string/item_code"
        android:textColor="@color/value_text"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="start"
        android:text="@string/item_name"
        android:textColor="@color/value_text"/>

    <TextView
        android:id="@+id/result_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:text="@string/result"
        android:textColor="@color/value_text"/>

    <TextView
        android:id="@+id/flag_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        />


    <TextView
        android:id="@+id/reference_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:text="@string/refer_value_name"
        android:textColor="@color/value_text"/>
</LinearLayout>