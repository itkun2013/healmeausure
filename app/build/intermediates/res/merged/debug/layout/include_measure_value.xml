<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304px"
    android:layout_height="200px"
    android:background="@drawable/rounded_rectangle"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="100px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/px16"
        android:paddingLeft="16px">
        <TextView
            android:id="@+id/tv_measure_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/measure_name_text_color"
            android:text="aa"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_measure_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/measureMax"
            android:text="aa"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tv_measure_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/measureMax"
            android:text="aa"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_measure_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="bottom"
            android:textColor="@color/measure_name_text_color"
            android:textSize="80sp"/>
        <TextView
            android:id="@+id/tv_measure_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/measureMax"
            android:layout_marginRight="@dimen/px16"
            android:gravity="right"
            android:text="aa"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>