<?xml version="1.0" encoding="utf-8"?>
<!--单位与值横向-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/value_layout_style">

    <TextView
        android:id="@+id/tv_measure_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left_of_measure_layout"
        android:textColor="@color/measure_name_text_color"
        android:textSize="@dimen/measure_name_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_measure_name"
        android:layout_marginStart="@dimen/margin_left_of_measure_layout"
        android:gravity="center|left"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_refer_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_measure_max"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/measureMax"
                android:textSize="@dimen/refer_value_size"/>

            <TextView
                android:id="@+id/tv_measure_min"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/measureMax"
                android:textSize="@dimen/refer_value_size"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_measure_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:text="@string/invalid_data"
            android:textColor="@color/measure_name_text_color"
            android:textSize="@dimen/measure_value_size"/>

        <TextView
            android:id="@+id/tv_measure_unit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:textColor="@color/measureMax"
            android:textSize="@dimen/measure_unit_size"/>
    </LinearLayout>
</RelativeLayout>