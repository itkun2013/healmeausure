<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/img_tutorial"
        android:layout_width="452px"
        android:layout_height="310px"
        android:layout_marginLeft="@dimen/px24"
        android:layout_marginTop="@dimen/px24"
        android:src="@mipmap/pic_spo2_1"/>

    <TextView
        android:id="@+id/tv_tutorial"
        android:layout_width="452px"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_tutorial"
        android:layout_marginLeft="@dimen/px24"/>

    <TextView
        android:id="@+id/tv_look"
        style="@style/style_look_video"
        />

</RelativeLayout>