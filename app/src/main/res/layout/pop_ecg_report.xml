<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_report_view"
    android:orientation="vertical"
    android:background="@color/menuText"
    android:padding="@dimen/px20">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ecg_report_title"
            android:textColor="@color/report_text_color"
            android:textSize="@dimen/px40" />

        <Button
            android:id="@+id/btn_stop_report"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px40"
            android:layout_gravity="end"
            android:background="@drawable/rounded_rectangle_width_blue"
            android:text="@string/stop_report"
            android:textColor="@color/measure_name_text_color" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_report_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/report_text_style"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:text="@string/report_name"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/tv_report_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/report_text_style"
            android:layout_weight="1"
            android:text="@string/report_gender"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/tv_report_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/report_text_style"
            android:layout_weight="1"
            android:text="@string/report_age"
             />
        <TextView
            android:id="@+id/tv_report_idcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            style="@style/report_text_style"
            android:text="@string/report_id"
             />
        <TextView
            android:id="@+id/tv_report_measure_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/report_text_style"
            android:gravity="end"
            android:layout_weight="2"
            android:text="@string/report_measure_time"
            android:textSize="@dimen/px20" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px10"
        android:background="@drawable/side_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/px10"
                    android:layout_marginTop="@dimen/px10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="110px"
                            android:gravity="center|left"
                            android:text="@string/HR" />

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="wrap_content"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/tv_report_hr"
                            style="@style/text_24_gray"
                            android:layout_width="160px"
                            android:gravity="center|left"
                            android:paddingLeft="5px"
                            android:text="@string/invalid_data" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="110px"
                            android:gravity="center|left"
                            android:text="@string/pr" />

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="wrap_content"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/tv_report_pr"
                            style="@style/text_24_gray"
                            android:layout_width="160px"
                            android:gravity="center|left"
                            android:paddingLeft="5px"
                            android:text="@string/invalid_data" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="110px"
                            android:gravity="center|left"
                            android:text="@string/qrs" />

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="wrap_content"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/tv_report_qrs"
                            style="@style/text_24_gray"
                            android:layout_width="160px"
                            android:gravity="center|left"
                            android:paddingLeft="5px"
                            android:text="@string/invalid_data" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/px10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="110px"
                            android:gravity="center|left"
                            android:text="@string/qtQtc" />

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="wrap_content"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/tv_report_qtqtc"
                            style="@style/text_24_gray"
                            android:layout_width="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5px"
                            android:text="@string/invalid_data" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="110px"
                            android:gravity="center|left"
                            android:text="@string/P_QRS_T" />

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="wrap_content"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/tv_report_pQrsT"
                            style="@style/text_24_gray"
                            android:layout_width="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5px"
                            android:text="@string/invalid_data" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="110px"
                            android:gravity="center|left"
                            android:text="@string/rv5Sv1" />

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="wrap_content"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/tv_report_rv5Sv1"
                            style="@style/text_24_gray"
                            android:layout_width="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5px"
                            android:text="@string/invalid_data" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/px10"
                    android:layout_marginTop="@dimen/px10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="110px"
                            android:gravity="center|left"
                            android:text="@string/rv5Sv1Add" />

                        <TextView
                            style="@style/text_24_black"
                            android:layout_width="wrap_content"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/tv_report_RV5SV1Add"
                            style="@style/text_24_gray"
                            android:layout_width="160px"
                            android:gravity="center|left"
                            android:paddingLeft="5px"
                            android:text="@string/invalid_data" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/value_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingStart="@dimen/px10"
                android:paddingTop="@dimen/px10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        style="@style/text_24_black"
                        android:layout_width="110px"
                        android:gravity="center|left"
                        android:paddingLeft="5px"
                        android:text="@string/ecg_diagnose_result" />


                    <TextView
                        android:id="@+id/tv_report_result"
                        style="@style/text_24_gray"
                        android:layout_width="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="5px"
                        android:singleLine="false"
                        android:text="@string/invalid_data" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/value_default" />
        <FrameLayout
            android:id="@+id/fl_report_ecg_wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <uk.co.senab.photoview.PhotoView
            android:id="@+id/img_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>